<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/creditsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Credits"
        android:textColor="#6A4E23"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/gameJamImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/creditsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/fishstick" />

    <TextView
        android:id="@+id/thanksAPH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameJamImage"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Special thanks to APirateHat, the organizer of this game jam!"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/thanksTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thanksAPH"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="And a huge thank you to both APirateHat and Kilmanio for offering me to team up with them!"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thanksTeam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#A4C2F4"
        android:paddingVertical="5dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
