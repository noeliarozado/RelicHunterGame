<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Message Text to display after clicking a stone -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Welcome to the Ancient Relics Game!"
        android:textSize="18sp"
        android:textAlignment="center"
        android:visibility="gone" />

    <!-- Table Layout for the stones (acts as a grid) -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="1"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- Rows will be dynamically added in the Java code -->
    </TableLayout>

    <!-- Container for the final message and score -->
    <TextView
        android:id="@+id/finalMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textAlignment="center"
        android:visibility="gone" />

</LinearLayout>

