<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Message Text to display before clicking a stone -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Ancient Relics Game!"
        android:textSize="24sp"
    android:textAlignment="center"
    android:visibility="gone"
    android:layout_marginBottom="24dp" />

    <!-- Table Layout for the stones (acts as a grid) -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="1"
        android:orientation="vertical"
        android:layout_gravity="center"/>

    <!-- Container for the final message and score -->
    <TextView
        android:id="@+id/finalMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
    android:textAlignment="center"
    android:visibility="gone"
    android:layout_marginTop="24dp" />

    <!-- Button to go back to the main menu -->
    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Menu"
        android:textSize="18sp"
    android:layout_marginTop="24dp" />

</LinearLayout>

